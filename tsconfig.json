{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "target": "es2021",
    "module": "esnext",
    "lib": ["es2019", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "paths": {
      "@velum/*": ["packages/*/src"]
    }
  },
  "include": ["packages/*/src", "packages/*/tests", "scripts"]
}
